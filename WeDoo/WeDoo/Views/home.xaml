             mc:Ignorable="d"
             x:Class="WeDoo.Views.home">
    <NavigationPage.TitleView>

        <StackLayout Orientation="Horizontal" >
           
            <StackLayout>
                <SearchBar  Placeholder="Search Items"
                                            PlaceholderColor="Gray" 
                                            TextColor="Black"
                                            x:Name="srbSearchPeople"
                                            BackgroundColor="#fff"
                                            HeightRequest="35" WidthRequest="280"/>
