                    <Label Text="Bakery" VerticalTextAlignment="End" HorizontalTextAlignment="Center"  FontSize="17" TextColor="white"/>
                </StackLayout>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="onFrameCitizenReporterTapped1" NumberOfTapsRequired="1" />
